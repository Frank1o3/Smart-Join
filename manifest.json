{
  "manifest_version": 3,
  "name": "Roblox Best Server Selector",
  "version": "1.2.2",
  "description": "Select the best Roblox server based on FPS, ping, and player count.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.roblox.com/*",
    "https://games.roblox.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/games/*"],
      "js": ["content.js"]
    }
  ]
}
