{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "es2020",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts"
    ]
}