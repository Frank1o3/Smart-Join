{
  "manifest_version": 3,
  "name": "Smart Join",
  "version": "1.2.4",
  "description": "Select the best Roblox server based on FPS, ping, and player count.",
  "homepage_url": "https://Frank1o3.github.io/Smart-Join/",
  "support_url": "https://Frank1o3.github.io/Smart-Join/support.html",
  "privacy_policy": "https://Frank1o3.github.io/Smart-Join/privacy.html",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.roblox.com/*",
    "https://games.roblox.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.roblox.com/games/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}