{
  "manifest_version": 3,
  "name": "Smart Join",
  "version": "1.2.6",
  "description": "Select the best Roblox server based on FPS, ping, and player count.",
  "homepage_url": "https://Frank1o3.github.io/Smart-Join/",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "icons": {
    "256": "icon.png"
  },
  "host_permissions": [
    "https://www.roblox.com/*",
    "https://games.roblox.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    "256": "icon.png"
  },
  "default_title": "Smart-Join"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.roblox.com/games/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "$schema": "https://json.schemastore.org/chrome-manifest"
}